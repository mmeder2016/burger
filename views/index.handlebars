<html>
<head>
	<title>	index.handlebars </title>
	<style>
	.div-content {
        border-style: solid;
        border-color: green;
    	border-width: 1px;
    	margin: auto;
		overflow: auto;
    }

	aside {
        text-align: left;
        border-style: solid;
        border-color: red;
    	border-width: 1px;
    	width: 49%;
    }
    .aside-left {
    	float: left;
    }
    .aside-right {
    	float: right;
    }

    </style>
</head>
<body>
	<div class="div-content">
		<aside class="aside-left">
			<ol type="1">
			  	{{#each burger_db}}
					{{#unless this.devoured}}
						<li>
					        {{this.burger_name}}
						</li>
			    	{{/unless}}
			  	{{/each}}
			</ol>
		</aside>
		<aside class="aside-right">
			<ol type="1">
			  	{{#each burger_db}}
					{{#if this.devoured}}
						<li>
					        {{this.burger_name}}
						</li>
			    	{{/if}}
			  	{{/each}}
			</ol>
		</aside>
	</div>
	<div class="div-submit">
		<h2>Add a new Burger</h2>
		<form class="create-update-form" action="/" method="POST">
			<div class="form-group">
				<label for="burg">Burger Name:</label><br>
				<input type="text" id="burg" name="name">
			</div>
		  	<button type="submit">Add Burger</button>
		</form>
	</div>
</body>
</html>